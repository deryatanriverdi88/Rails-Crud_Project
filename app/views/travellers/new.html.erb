
<div class="new-traveller">


<h2>Create a new account</h2>
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
  <% end %>


<%= form_for @traveller do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field:password %>
  <%= f.submit "Create a new account" %>
  <% end %>

  </div>
