<%= form_tag login_index_path do %>
  <% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <%= error %>
  <% end %>
<% end %>

<div class="login">
    <ul>
    <li>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </li>
    <li>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </li>
  </ul>
  <span class="submit">
  <%= submit_tag "Log in" %>
  </span>
<% end %>
</div>
